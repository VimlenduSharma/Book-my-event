###############################################################################
# ‚öôÔ∏è  Core
###############################################################################
APP_ENV=dev                   # dev | test | prod
DEBUG=true                    # false in prod
LOG_LEVEL=INFO                # DEBUG | INFO | WARNING | ERROR

###############################################################################
# üåê Network / CORS
###############################################################################
# Allow your local front-end and (later) production domain to talk to the API.
# Comma-separate multiple origins or use JSON list ["...", "..."]
BACKEND_CORS_ORIGINS=http://localhost:8080

###############################################################################
# üóÑÔ∏è  Database
###############################################################################
# docker-compose sets up Postgres service named `db`
DATABASE_URL=postgresql+psycopg://postgres:password@db:5432/scheduler

###############################################################################
# üí§  Cache / Broker
###############################################################################
REDIS_URL=redis://redis:6379/0

###############################################################################
# ‚úâÔ∏è  E-mail
###############################################################################
EMAIL_BACKEND=console         # console | ses | sendgrid
SES_REGION=us-east-1          # ‚ùó only if EMAIL_BACKEND=ses
SENDGRID_API_KEY=             # ‚ùó only if EMAIL_BACKEND=sendgrid
EMAIL_FROM=no-reply@scheduler.local

###############################################################################
# ü™£  Object Storage (S3 / MinIO)
